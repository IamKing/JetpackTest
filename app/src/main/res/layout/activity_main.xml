<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/data_bind_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="doOnClick"
        android:text="Data Binding"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/lifecycle_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="doOnClick"
        android:text="LifeCycles"
        app:layout_constraintLeft_toRightOf="@+id/data_bind_btn"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/livedata_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="doOnClick"
        android:text="LiveData"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/data_bind_btn" />


    <Button
        android:id="@+id/viewmodel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="doOnClick"
        android:text="ViewModel"
        app:layout_constraintLeft_toRightOf="@+id/livedata_btn"
        app:layout_constraintTop_toBottomOf="@+id/data_bind_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>